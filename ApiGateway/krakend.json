{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "VenturaHR - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "port": {{ env "PORT" }},
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/job-postings",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/WeatherForecast",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "disable_host_sanitize": false,
          "host": [
            "https://venturahr-webhooks.herokuapp.com"
          ],
          "is_collection": true,
          "target": ""
        }
      ]
    }
  ]
}