{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "VenturaHR - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 8080,
  "endpoints": [
    {
      "endpoint": "/companies",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/companies",
          "method": "POST",
          "host": ["https://venturahr-users.herokuapp.com"]
        }
      ]
    },
    {
      "endpoint": "/job-postings",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/job-postings",
          "method": "POST",
          "host": ["https://venturahr-job-postings.herokuapp.com"]
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "issuer": "https://securetoken.google.com/venturahr-93abd",
          "audience": ["venturahr-93abd"],
          "roles_key": "role",
          "roles": ["company"],
          "cache": true
        }
      }
    },
    {
      "endpoint": "/job-postings",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/job-postings",
          "method": "POST",
          "host": ["https://venturahr-job-postings.herokuapp.com"]
        }
      ],
      "extra_config": {
        "auth/validator": {
          "alg": "RS256",
          "issuer": "https://securetoken.google.com/venturahr-93abd",
          "audience": ["venturahr-93abd"],
          "roles_key": "role",
          "roles": ["company"],
          "cache": true
        }
      }
    }
  ]
}